<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".PvP">

    <TextView
        android:id="@+id/txtScoreP1"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Score P1"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUse4"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/txtScoreP2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Score P2"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGiveUp3"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/txtP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2's word:"
        android:textColor="@color/darkGray"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/charactersP2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <TextView
        android:id="@+id/txtP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1's word:"
        android:textColor="@color/darkGray"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/charactersP1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTurnPlayer"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/txtTurnPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Turn"
        android:textSize="30dp"
        android:textColor="@color/darkGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@id/btnGiveUp3"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/customtextview"
        android:text="Give up"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charactersP2" />

    <Button
        android:id="@id/btnUse4"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/customtextview"
        android:text="Use word"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charactersP2" />

    <EditText
        android:id="@+id/charactersP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="P2, enter your word here"
        android:inputType="text"
        android:textSize="25dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/charactersP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="P1, enter your word here"
        android:inputType="text"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/darkGray"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/startWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1, start your word with:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtP1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTurnPlayer" />

    <TextView
        android:id="@+id/startWord2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtP2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charactersP1"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>